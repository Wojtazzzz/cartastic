		"@fastify/swagger": "^8.2.0",
		"@fastify/swagger-ui": "^1.3.0",
		"@fastify/type-provider-typebox": "^2.4.0",
		"@prisma/client": "^4.7.1",
		"@sinclair/typebox": "^0.25.14",
		"fastify": "^4.10.2",
		"fastify-cli": "^5.6.1",
		"fastify-plugin": "^4.4.0",
		"nodemon": "^2.0.20",
