// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Brand {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  models    Model[]
  CarOffers CarOffer[]
}

model Model {
  id        Int        @id @default(autoincrement())
  name      String
  brand     Brand      @relation(fields: [brandId], references: [id], onDelete: Cascade)
  brandId   Int
  CarOffers CarOffer[]
}

enum Fuel {
  diesel
  petrol
  gasoline
  electric
}

enum Body {
  hatchback
  estate
  peopleCarrier
  saloon
  suv
  coupe
  pickup
  convertible
}

enum Transmission {
  manual
  auto
}

model CarOffer {
  id             Int          @id @default(autoincrement())
  images         Json
  price          Float
  productionYear Int
  miles          Int
  hp             Int
  gears          Int
  topSpeed       Int
  doors          Int
  fuel           Fuel
  engine         Float
  body           Body
  transmission   Transmission
  brand          Brand        @relation(fields: [brandId], references: [id], onDelete: Cascade)
  brandId        Int
  model          Model        @relation(fields: [modelId], references: [id], onDelete: Cascade)
  modelId        Int
}
