{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"strict": true,
		"outDir": "dist",
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
